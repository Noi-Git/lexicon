{{#each ideas}}

<div class="row justify-content-md-center mb-5">
  <div class="col-8 ">
    <div class="card shadow-sm">
      <div class="card-header bg-info text-light"> <h4>{{title}}</h4> </div>
      <div class="card-body bg-light"> <p>{{details}}</p> 
        <div class="row">
          <div class="col-6">
            <a class="btn alert alert-primary btn-block mb-0 bg-light" href="/ideas/edit/{{id}}">Edit</a>
          </div>
          <div class="col-6">
            <a class="btn alert alert-danger btn-block mb-0 bg-light" href="/ideas/edit/{{id}}">Delete</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{{else}}
  <div class="row justify-content-md-center">
  <div class="col-8 ">
    <div class="card shadow-sm">
      <div class="card-header bg-info text-light"> <h3>No ideas listed</h3> </div>
    </div>
  </div>
{{/each}}


